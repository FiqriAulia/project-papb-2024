<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".friendrequest.progress5.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/vectorimg"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#EE964B"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"/>


    </LinearLayout>

    <ImageButton
        android:id="@+id/acc"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/vector10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/tolak"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/vector11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/button_other_options"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/vector6" />

</LinearLayout>
