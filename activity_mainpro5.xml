<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".friendrequest.progress5.MainActivity"
    >


    <!-- Bagian header -->
    <ImageButton
        android:id="@+id/back"
        android:layout_width="14dp"
        android:layout_height="24dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/ubuntubold"
        android:text="Add Friend"
        android:textAlignment="center"
        android:textColor="#EE964B"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/notif"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="324dp"
        android:layout_marginTop="32dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/vector2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <!-- Bagian pencarian -->
    <EditText
        android:id="@+id/searchbar"
        android:layout_width="354dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/ubuntureg"
        android:text="Search Username"
        android:textAlignment="viewStart"
        android:textColor="#4D000000"
        android:textSize="20sp"
        android:paddingStart="40dp"
        android:paddingTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Hasil pencarian -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="354dp"
        android:layout_height="300dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/searchbar"
        app:layout_constraintBottom_toTopOf="@id/fl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Tombol navigasi -->

    <SearchView
        android:id="@+id/search"
        android:layout_width="24dp"
        android:layout_height="23dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/fl"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="236dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/vector4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_view" />

    <ImageButton
        android:id="@+id/cam"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="236dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/vector5"
        app:layout_constraintStart_toEndOf="@id/fl"
        app:layout_constraintTop_toBottomOf="@id/recycler_view" />

    <ImageButton
        android:id="@+id/beranda"
        android:layout_width="74dp"
        android:layout_height="69dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="236dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/vector7"
        app:layout_constraintStart_toEndOf="@id/cam"
        app:layout_constraintTop_toBottomOf="@id/recycler_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
